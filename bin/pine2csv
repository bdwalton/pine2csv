#!/usr/ruby-enterprise/bin/ruby

require 'rubygems'

retried = false
begin
  require 'pine2csv'
rescue LoadError => e
  $:.unshift File.join(File.dirname(File.expand_path(__FILE__)), "..", "lib")
  if retried
    raise
  else
    retried = true
    retry
  end
end

p2c = Pine2CSV.new(File.expand_path(ARGV[0]))
puts p2c.to_csv
